<%= form_for @user, url: account_path, html: { class: 'col-md-4 col-md-offset-4' } do |f| %>
  <h2>Account</h2>

  <div class="well">
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.email_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.email_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group text-right">
      <%= link_to "Cancel", :back, class: 'btn btn-link' %>
      <%= f.submit "Save Changes", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
