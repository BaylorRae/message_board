<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'col-md-4 col-md-offset-4' }) do |f| %>
  <h2>Forgot your password?</h2>

  <%= devise_error_messages! %>

  <div class="well">
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="clearfix">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary pull-right' %>
    </div>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
