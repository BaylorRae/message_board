<h2>Message Board</h2>

<p class="lead">
  Welcome to the message board! Join in on an existing post below or <%= link_to "Start your own discussion", new_post_path %>.
</p>

<% @posts.each do |post| %>
  <div class="thread">
    <h3 class="post-title"><%= link_to post.title, post_path(post) %></h3>

    <div class="recent-messages">
      <%= render partial: "message", collection: post.messages, as: :message %>
    </div>
  </div>
<% end %>
