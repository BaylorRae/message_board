<h2 class="thread-title"><%= @post.title %></h2>

<div class="recent-messages">
  <% @post.post_messages.each do |message| %>
    <div class="row message">
      <div class="col-md-3">
        <span class="author"><%= message.user.display_name %></span>
        <span class="message-time">posted <%= time_ago_in_words message.created_at %> ago</span>
      </div>
      <div class="col-md-9 body">
        <%= simple_format message.body %>
      </div>
    </div>
  <% end %>
</div>

<hr />

<%= form_for [@post, Message.new] do |f| %>
  <div class="form-group">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Post", class: 'btn btn-primary' %>
  </div>
<% end %>
