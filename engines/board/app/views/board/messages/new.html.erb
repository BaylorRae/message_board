<h2>New Reply</h2>

<%= form_for [@post, @message] do |f| %>

  <% if @message.errors.any? %>
    <p class="alert">The following errors prevented us from posting your message</p>

    <ol>
      <% @message.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ol>
  <% end %>

  <div class="form-group">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Post", class: 'btn btn-primary' %>
    <%= link_to "Back to Post", @post, class: 'btn btn-link' %>
  </div>
<% end %>
